<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/barChart"
        android:layout_width="match_parent"
        android:layout_height="300dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginVertical="20dp"
        >
        <android.widget.ToggleButton
            android:text="수유"
            android:background="@drawable/time_feedbutton_2"
            android:id="@+id/time_feedbutton_1"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:textColor="#fcf5e2"
            android:layout_marginLeft="35dp"
            android:textOff="수유"
            android:textOn="수유"
            />
        <android.widget.ToggleButton
            android:background="@drawable/time_sleepbutton_2"

            android:id="@+id/time_sleepbutton_1"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:textColor="#fcf5e2"
            android:layout_marginLeft="35dp"
            android:textOff="수면"
            android:textOn="수면"
            />
        <android.widget.ToggleButton
            android:background="@drawable/time_toilet_button_2"
            android:id="@+id/time_toiletbutton_1"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:textColor="#fcf5e2"
            android:layout_marginLeft="35dp"
            android:textOff="배변"
            android:textOn="배변"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="15dp">
            <!--카테고리 사진-->
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/feed"/>

            <!--카테고리 이름-->
            <TextView
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="오늘 섭취량"
                android:textSize="20sp"
                android:textColor="#000"/>

            <!--카테고리 실제 값-->
            <TextView
                android:layout_width="100dp"
                android:id="@+id/text_sumvalue"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="200ml"
                android:textSize="15sp"
                android:textColor="#5b5b5b"/>
            <!--섭취량-->

        </LinearLayout>
        <!--구분선-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="10dp"
            android:background="#aaa"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="15dp">
            <!--카테고리 사진-->
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/moon"/>
            <!--카테고리 이름-->
            <TextView
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="오늘 수면 시간"
                android:textSize="20sp"
                android:textColor="#000"/>

            <!--카테고리 실제 값-->
            <TextView
                android:id="@+id/text_sleeptime"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="200ml"
                android:textSize="15sp"
                android:textColor="#5b5b5b"/>


        </LinearLayout>
        <!--구분선-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="10dp"
            android:background="#aaa"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="15dp">
            <!--카테고리 사진-->
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/toilet"/>

            <!--카테고리 이름-->
            <TextView
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="오늘 배변 횟수"
               android:textSize="20sp"
                android:textColor="#000"/>

            <!--카테고리 실제 값-->
            <TextView
                android:id="@+id/text_counttoilet"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="200ml"
                android:textSize="15sp"
                android:textColor="#5b5b5b"/>
            <!--섭취량-->
            <TextView
                android:id="@+id/text_time"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginLeft="130dp"
                android:text="2022-11-15 10:30:20"
                android:textSize="12sp"
                android:textColor="#5b5b5b"
                android:maxLines="2"/>

        </LinearLayout>
        <!--구분선-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="10dp"
            android:background="#aaa"/>

    </LinearLayout>

</LinearLayout>
</RelativeLayout>